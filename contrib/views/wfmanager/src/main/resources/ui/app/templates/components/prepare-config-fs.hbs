            <option value="chmod">chmod</option>
            <option value="touchz">touchz</option>
            <option value="chgrp">chgrp</option>
          </select>
        </div>
        <div class="col-xs-1">
          <input class="form-control  btn btn-success" type="button" {{action "addPrepare"}} value="+">
